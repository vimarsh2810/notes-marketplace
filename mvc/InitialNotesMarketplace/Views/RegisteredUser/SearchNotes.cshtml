                            <option value="High School">High School</option>
                            <option value="University">University</option>
                        </select>*@
                        @{SearchNote searchNote = (SearchNote)Session["searchNote"]; }
                        @Html.DropDownListFor(model => model.NoteType, new SelectList(searchNote.ListTypes, "ID", "Name"), "Select Type", new { @class = "form-control search-note-filter", id = "search-note-type" })                      
                    </div>
                </div>

                <div class="col-xl-2 col-md-4 col-6">

                    <div>
                        @*<select class="form-control search-note-filter" required>
