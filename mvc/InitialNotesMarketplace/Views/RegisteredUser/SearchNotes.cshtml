                            <option value="Oxford University">Oxford University</option>
                            <option value="MIT University">MIT University</option>
                            <option value="Gujarat University">Gujarat University</option>
                        </select>*@
                        @Html.DropDownListFor(model => model.UniversityName, new SelectList(searchNote.ListUniversities), "Select University", new { @class = "form-control search-note-filter", id = "search-note-university" })                      

                    </div>

                </div>

                <div class="col-xl-2 col-md-4 col-6">

                    <div>
