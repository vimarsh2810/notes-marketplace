@model InitialNotesMarketplace.Models.SellerNote
@using InitialNotesMarketplace.Models
@using InitialNotesMarketplace.Models.Extended

@{
    ViewBag.Title = "SearchNote";
    Layout = "~/Views/Shared/_RegisteredUserNavbar.cshtml";
}



<section id="search-title">
    <div class="search-header">
        <h1>Search Notes</h1>
    </div>
</section>

<section id="filters">
    <div class="container">
        <div id="search-filter-heading">
            <h3>Search and Filter notes</h3>
        </div>
        <div id="search-select">
            <div class="row" id="search-options">
                <div class="col-xl-12" id="search-note">
                    <input type="text" class="form-control input-field" id="search-note-input" placeholder="Search notes here...">
                </div>
            </div>

            @{
                DBEntities db = new DBEntities();
            }

            <div class="row" id="select-options">
                <div class="col-xl-2 col-md-4 col-6">
                    @{ 

                    }
                    <div>
                        @*<select class="form-control" id="search-note-type" required>
                            <option value="" selected hidden>Select Type</option>
